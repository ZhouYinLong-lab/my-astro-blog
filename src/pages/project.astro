---
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// 1. 获取所有的博客文章
const allPosts = await getCollection("blog");

// 2. 筛选出分类包含“实验室”的文章，并按日期倒序排列
const labPosts = allPosts
  .filter((post) => {
    // 兼容 categories 数组和 category 字符串两种写法
    const cats = post.data.categories || [post.data.category];
    return cats.flat().includes("实验室");
  })
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="实验室项目">
  <MainCard
    title="赛博工坊 (Labs)"
    description="这里存放着我所有天马行空、不拘一格的数字实验与互动项目。"
    textOverlay="LABS"
    infoIcon="lucide:flask-conical"
  >
    <section class="py-4">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <Icon name="lucide:rocket" class="w-6 h-6 text-primary" />
        <span>实验档案</span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {labPosts.map((post) => (
          <a href={`/blog/${post.slug}/`} class="card bg-base-200 hover:bg-base-300 transition-all duration-300 shadow-lg hover:shadow-xl overflow-hidden group border border-base-300">
            {post.data.cover && (
              <figure class="h-48 overflow-hidden relative">
                <img
                  src={post.data.cover}
                  alt={post.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors duration-300"></div>
              </figure>
            )}
            <div class="card-body p-6">
              <h3 class="card-title text-xl mb-2 group-hover:text-primary transition-colors">
                {post.data.title}
              </h3>
              <p class="text-base-content/70 text-sm mb-4 line-clamp-2">
                {post.data.description}
              </p>
              <div class="mt-auto flex items-center text-primary text-sm font-bold">
                <span>进入实验</span>
                <Icon name="lucide:arrow-right" class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" />
              </div>
            </div>
          </a>
        ))}
      </div>

      {labPosts.length === 0 && (
        <div class="text-center py-16 text-base-content/50 bg-base-200 rounded-2xl border border-dashed border-base-300 mt-4">
          <Icon name="lucide:ghost" class="w-12 h-12 mx-auto mb-4 opacity-50" />
          <p>实验室目前还在筹备中，敬请期待...</p>
        </div>
      )}
    </section>

    <!-- Open Source Contributions -->
    <section class="py-4">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <Icon name="lucide:git-pull-request" class="w-6 h-6 text-primary" />
        <span>Open Source Contributions</span>
      </h2>

      <div class="card bg-base-200 p-6">
        <ul class="space-y-6">
          {
            [
              {
                project: "Astro",
                description: "Contributed to performance improvements and bug fixes",
                url: "https://github.com/withastro/astro",
              },
              {
                project: "TailwindCSS",
                description: "Added new utility classes and documentation improvements",
                url: "https://github.com/tailwindlabs/tailwindcss",
              },
              {
                project: "DaisyUI",
                description: "Contributed component enhancements and theme improvements",
                url: "https://github.com/saadeghi/daisyui",
              },
            ].map((contrib) => (
              <li class="flex items-start gap-4">
                <div class="flex-shrink-0 bg-base-300 p-2 rounded-full">
                  <Icon name="lucide:git-commit" class="w-6 h-6 text-primary" />
                </div>
                <div>
                  <h3 class="text-lg font-bold">
                    <a
                      href={contrib.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="hover:text-primary transition-colors flex items-center gap-1"
                    >
                      {contrib.project}
                      <Icon name="lucide:external-link" class="w-4 h-4" />
                    </a>
                  </h3>
                  <p class="text-base-content/80">{contrib.description}</p>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </section>
  </MainCard>
</BaseLayout>